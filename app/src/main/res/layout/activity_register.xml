            <View
                android:layout_width="@dimen/layout_size_8dp"
                android:layout_height="@dimen/layout_size_32dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/tv_register_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/layout_size_10dp"
                android:gravity="center"
                android:text="建立患者信息（1/4）"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="@dimen/layout_size_36dp"
                android:layout_height="@dimen/layout_size_36dp"
                android:src="@drawable/ic_play_arrow_black_48dp"/>

            <TextView
                android:id="@+id/tv_register_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_size_10dp"
                android:layout_marginEnd="@dimen/layout_size_10dp"
                android:text="患者手机号"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_size_1dp"
            android:background="@color/colorPrimary" />

        <ViewFlipper
