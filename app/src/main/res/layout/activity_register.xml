            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_margin="@dimen/layout_size_10dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_register_mobile"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_size_10dp"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/hintAppearance">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etv_register_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请录入患者手机号"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_14sp"
                        android:theme="@style/CustomPrimaryTextInputLayout"/>

                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/layout_size_6dp">

                    <Button
                        android:id="@+id/btn_detect_new_user_step_2_previous"
                        android:layout_width="@dimen/layout_size_120dp"
                        android:layout_height="@dimen/layout_size_32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round_shape_enabled"
                        android:text="上一步"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_16sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_detect_new_user_step_2_next"
                        android:layout_width="@dimen/layout_size_120dp"
                        android:layout_height="@dimen/layout_size_32dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/layout_size_10dp"
                        android:background="@drawable/button_round_shape_disabled"
                        android:enabled="false"
                        android:text="下一步"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_margin="@dimen/layout_size_10dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_register_name"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_size_10dp"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/hintAppearance">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etv_register_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请录入患者姓名"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_14sp"
                        android:theme="@style/CustomPrimaryTextInputLayout"/>
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/layout_size_6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_detect_new_user_step_3_previous"
                        android:layout_width="@dimen/layout_size_120dp"
                        android:layout_height="@dimen/layout_size_32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round_shape_enabled"
                        android:text="上一步"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_16sp" />

                    <Button
                        android:id="@+id/btn_detect_new_user_step_3_next"
                        android:layout_width="@dimen/layout_size_120dp"
                        android:layout_height="@dimen/layout_size_32dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/layout_size_10dp"
                        android:background="@drawable/button_round_shape_disabled"
                        android:enabled="false"
                        android:text="下一步"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_margin="@dimen/layout_size_10dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_register_id_card"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_size_10dp"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/hintAppearance">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etv_register_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请录入患者身份证号"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_14sp"
                        android:theme="@style/CustomPrimaryTextInputLayout"/>
                </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="@dimen/layout_size_6dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_detect_new_user_step_4_previous"
                        android:layout_width="@dimen/layout_size_120dp"
                        android:layout_height="@dimen/layout_size_32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round_shape_enabled"
                        android:text="上一步"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_16sp" />

                    <Button
                        android:id="@+id/btn_detect_new_user_step_4_next"
                        android:layout_width="@dimen/layout_size_120dp"
                        android:layout_height="@dimen/layout_size_32dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/layout_size_10dp"
                        android:background="@drawable/button_round_shape_disabled"
                        android:enabled="false"
                        android:text="下一步"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_detect_new_user_step_3_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_size_32dp"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:paddingTop="@dimen/layout_size_6dp"
                    android:background="@android:color/transparent"
                    android:text="忘记身份证号码？跳过 >>"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_margin="@dimen/layout_size_10dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_register_social_insurance"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_size_10dp"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/hintAppearance">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etv_register_social_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入社会保障卡号码"
                        android:inputType="number"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_14sp"
                        android:theme="@style/CustomPrimaryTextInputLayout"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/layout_size_6dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_detect_new_user_step_5_previous"
                            android:layout_width="@dimen/layout_size_120dp"
                            android:layout_height="@dimen/layout_size_32dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_round_shape_enabled"
                            android:text="上一步"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_16sp" />

                        <Button
                            android:id="@+id/btn_detect_new_user_step_5_next"
                            android:layout_width="@dimen/layout_size_120dp"
                            android:layout_height="@dimen/layout_size_32dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/layout_size_10dp"
                            android:background="@drawable/button_round_shape_disabled"
                            android:enabled="false"
                            android:text="下一步"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_16sp" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_detect_new_user_step_5_skip"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/layout_size_32dp"
                        android:layout_gravity="center"
                        android:gravity="top"
                        android:paddingTop="@dimen/layout_size_6dp"
                        android:background="@android:color/transparent"
                        android:text="暂时不录入，直接提交 >>"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_margin="@dimen/layout_size_10dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_register_social_insurance_confirm"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_size_10dp"
                    android:orientation="vertical"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/hintAppearance">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etv_register_social_insurance_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请再输入一次社会保障卡号码"
                        android:inputType="number"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_14sp"
                        android:theme="@style/CustomPrimaryTextInputLayout"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/layout_size_6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_detect_new_user_step_6_previous"
                        android:layout_width="@dimen/layout_size_120dp"
                        android:layout_height="@dimen/layout_size_32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round_shape_enabled"
                        android:text="上一步"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_16sp" />

                    <Button
                        android:id="@+id/btn_detect_new_user_step_6_done"
                        android:layout_width="@dimen/layout_size_120dp"
                        android:layout_height="@dimen/layout_size_32dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/layout_size_10dp"
                        android:background="@drawable/button_round_shape_disabled"
                        android:enabled="false"
                        android:text="提交"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_16sp" />
                </LinearLayout>

            </LinearLayout>

        </ViewFlipper>

    </LinearLayout>

</RelativeLayout>
